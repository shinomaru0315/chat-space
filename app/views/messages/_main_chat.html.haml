.main
  .top
    = render partial: "groups/top"

  .main__chat
    = render @messages
      


  .form
    = form_for [@group, @message], html:{class:'form__text-area'}do |f|
      = f.text_field :content,class: 'form__text-area__field', placeholder: 'type a message'
      .form__text-area__mask
        = f.label :image, class: 'form__text-area__mask__image'do
          = icon('fas', 'image', class: 'form__text-area__mask__image__icon')
          = f.file_field :image, class: 'form__text-area__mask__image__hidden'
      = f.submit 'Send', class: 'form__submit'